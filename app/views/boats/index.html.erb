<div class="container">
  <div class="back-button">
    <%= link_to "Create listing", new_boat_path, :class => "back-button-link"  %>
  </div>
  <div class="mt-3">
    <h4><%= pluralize(Boat.count, 'boat') %></h4>
  </div>
  <div class="cards my-5">
    <% @boats.each do |boat| %>
      <div class="card-trip">
        <img src="https://images.unsplash.com/photo-1569263979104-865ab7cd8d13?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=753&q=80" />
        <div class="p-3">
          <div class="d-flex justify-content-between mb-2">
            <h5 class="boat-name-text"><%= link_to "#{boat.name}", boat_path(boat), class:'boat-name' %></h5>
            <div><i class="fas fa-map-marker-alt"></i> <%= boat.location %></div>
          </div>
          <div class="d-flex flex-column justify-content-center">
            <h6><i class="fas fa-ship"></i><%= boat.boat_type %></h6>
            <h6><i class="fas fa-user-friends mb-1"></i> <%= boat.capacity %></h6>
            <h6><%= boat.price.round %> â‚¬ / day</h6>
          </div>
           <div class="bookmark">
             <a href="#"><i class="fas fa-star"></i></i></a>
           </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
