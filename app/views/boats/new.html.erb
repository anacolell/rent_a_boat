<div class="container">
<h3>Create your listing</h3>
<%= simple_form_for(@boat) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :location %>
    <%= f.input :capacity %>
    <%= f.input :size %>
    <%= f.input :boat_type, collection: Boat::TYPE %>
    <%= f.input :description %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%= link_to 'Back', boats_path %>
</div>
