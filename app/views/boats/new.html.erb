<div class="wrapper">
<h3 class="mt-4">Add your boat</h3>
<%= simple_form_for(@boat) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :location %>
    <%= f.input :capacity %>
    <%= f.input :size %>
    <%= f.input :boat_type, collection: Boat::BOAT_TYPE %>
    <%= f.input :description %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>
  <div class="button-container">
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
  <%= link_to 'Back to all listings', boats_path, :class => "back-button" %>
  </div>
</div>
